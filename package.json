{
  "name": "kit-dot",
  "version": "0.1.0",
  "description": "A TypeScript SDK toolkit for building Dapps on Polkadot Cloud",
  "main": "dist/index.js",
  "bin": {
    "kit-dot": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:templates": "jest --testPathPattern=template-validation",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "polkadot",
    "blockchain",
    "dapp",
    "cli",
    "toolkit",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "degit": "^2.8.4",
    "execa": "^9.4.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.0.0",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.1",
    "@types/degit": "^2.8.6",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.2",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.14.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
